<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookPreview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_double">

    <me.oscarglo.henripottier.PerspectiveImageView
        android:id="@+id/bookPreviewImg"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/bookCover"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:perspective="10"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/bookPreviewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bookPreviewImg"
        app:layout_constraintStart_toStartOf="@+id/bookPreviewImg"
        app:layout_constraintTop_toBottomOf="@+id/bookPreviewImg"
        tools:text="Henri potier et le efdfe" />
</androidx.constraintlayout.widget.ConstraintLayout>